@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li >
        <a  asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li >
        @*<a asp-area="Identity" type="submit" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Logout</a>*@ 
        <form asp-area="Identity" asp-page="/Account/Logout"  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" style="margin-top:-14px" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li >
        <a  asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li >
        <a  asp-area="Identity" asp-page="/Account/Login">Login</a> 
    </li>
}

